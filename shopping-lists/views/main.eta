<!doctype html>
<html lang="en">
<% layout("./layouts/layout.eta") %>
<head>
  <title>Shared shopping lists</title>
</head>
<body>
  <h1>Shared Shopping Lists</h1>

  <% if (it.hasLists) { %>
    <div>
      <p>Statistics:</p>
      <ul>
        <li>Shopping lists: <%= it.numberOfLists %></li>
        <li>Shopping list items: <%= it.numberOfItems %></li>
      </ul>
    </div>
  <% } else { %>
    <p>No shopping lists yet.</p>
  <% } %>

  <a href="/lists">Lists</a>
</body>
</html>
